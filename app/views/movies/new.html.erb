<div class="container-sell">
  <div class="filmstrip">
    <h1>Sell your movie !</h1>
  </div>
  <div class="form-container">
    <%= simple_form_for [@movie], autocomplete:"off" do |f| %>
    <%= f.input :title, placeholder: "Avatar"  %>
    <br>
    <%= f.input :genre, placeholder: "Action", collection: ["Action", "Comedy", "Fantasy", "Horror", "Crime", "Thriller", "Animation"] %>
    <br>
    <%= f.input :year, placeholder: "2009", input_html: {min: '1878', max: '2022', step: '1'} %>
    <br>
    <%= f.input :imdb_rating, placeholder: "7.8", input_html: {min: '0', max: '10', step: '0.1'} %>
    <br>
    <%= f.input :description, placeholder: "A paraplegic Marine dispatched to the moon Pandora on a unique mission becomes torn between following his orders and protecting the world he feels is his home." %>
    <br>
    <%= f.input :director, placeholder: "James Cameron" %>
    <br>
    <%= f.input :price, placeholder: "5.99" %>
    <br>
    <%= f.input :photo, as: :file %>
    <br>
    <div class="submit-button-container">
      <%= f.button :submit, 'Sell movie', class:"btn btn-ghost" %>
    </div>
    <% end %>
  </div>
</div>
